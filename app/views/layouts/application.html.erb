    <%= display_meta_tags site: "KOUN" %>
    <%# <title><%= full_title(yield(:title))</title>%>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag 'favicon.png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="turbo-visit-control" content="reload">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload', as: 'style'%>
    <%# Code pour inclure balises canonicales %>

    <%= javascript_importmap_tags %>
    
    <% I18n.available_locales.each do |locale| %>
      <%= tag :link, rel: "alternate", hreflang: locale.to_s, href: url_for(locale: locale, only_path: false)  %>
    <% end %>


  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TZ3S3WS5"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <%= yield %>
    <div class="floating-whatsap">
      <%= link_to image_tag("whatsapp-icon.svg", alt: "WhatsApp", class:"social-icon"), 'https://wa.me/212620302294', target: '_blank' %>
    </div>
    <%= render 'layouts/footer' %>
    <div class="get-quote-mobile">
    <%= link_to request_quote_path, class: "cta-link" do %> 
      <%= t 'nav.mobile.quote' %>
      <div class="cta-arrow">
        <%= image_tag 'white-arrow.svg', class:'cta-mobile-arrow', alt: 'white arrow'%> 
     </div>
    <% end %>
    </div>
  </body>
</html>
